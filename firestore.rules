rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection dishes
    match /dishes/{document} {
      // Permet la lecture publique des plats (pour le menu public)
      allow read: if true;
      
      // Seuls les utilisateurs connectés peuvent créer/modifier/supprimer
      allow create, update, delete: if request.auth != null;
    }
    
    // Règles pour la collection orders
    match /orders/{document} {
      // Permet la lecture des commandes aux utilisateurs connectés (admin, serveurs)
      allow read: if request.auth != null;
      
      // Permet la création de commandes (même sans authentification pour les clients)
      allow create: if true;
      
      // Permet la mise à jour des commandes aux utilisateurs connectés (admin, serveurs)
      allow update: if request.auth != null;
      
      // Permet la suppression des commandes aux utilisateurs connectés (admin, serveurs)
      allow delete: if request.auth != null;
    }
    
    // Règles pour les autres collections (si nécessaire)
    match /{document=**} {
      // Par défaut, refuser l'accès
      allow read, write: if false;
    }
  }
} 