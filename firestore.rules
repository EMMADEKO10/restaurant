rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction pour vérifier les permissions
    function hasPermission(permission) {
      return request.auth != null && 
             request.auth.token.permissions != null && 
             permission in request.auth.token.permissions;
    }
    
    // Fonction pour vérifier le rôle
    function hasRole(role) {
      return request.auth != null && 
             request.auth.token.role == role;
    }
    
    // Fonction pour vérifier si c'est un admin
    function isAdmin() {
      return hasRole('admin') || hasRole('super_admin');
    }
    
    // Fonction pour vérifier si c'est un serveur
    function isServer() {
      return hasRole('server') || isAdmin();
    }
    
    // Règles pour la collection users
    match /users/{userId} {
      // Lecture : utilisateur peut lire son propre profil, admins peuvent lire tous
      allow read: if request.auth != null && (
        request.auth.uid == userId || isAdmin()
      );
      
      // Création : admins uniquement
      allow create: if isAdmin();
      
      // Mise à jour : utilisateur peut mettre à jour son profil, admins peuvent tout
      allow update: if request.auth != null && (
        request.auth.uid == userId || isAdmin()
      );
      
      // Suppression : super admin uniquement
      allow delete: if hasRole('super_admin');
    }
    
    // Règles pour la collection dishes
    match /dishes/{document} {
      // Permet la lecture publique des plats (pour le menu public)
      allow read: if true;
      
      // Seuls les admins peuvent créer/modifier/supprimer
      allow create, update, delete: if isAdmin();
    }
    
    // Règles pour la collection orders
    match /orders/{document} {
      // Permet la lecture des commandes aux serveurs et admins
      allow read: if isServer();
      
      // Permet la création de commandes (même sans authentification pour les clients)
      allow create: if true;
      
      // Permet la mise à jour des commandes aux serveurs et admins
      allow update: if isServer();
      
      // Permet la suppression des commandes aux admins uniquement
      allow delete: if isAdmin();
    }
    
    // Règles pour les autres collections (si nécessaire)
    match /{document=**} {
      // Par défaut, refuser l'accès
      allow read, write: if false;
    }
  }
} 